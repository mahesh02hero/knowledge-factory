<!-- app/views/users/index.html.erb -->
<div class="container mt-5">
  <h1>Users</h1>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="thead-dark">
        <tr>
          <th>Email</th>
          <th colspan="3" class="text-center">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td class="text-center"><%= link_to 'Show', user, class: 'btn btn-primary btn-sm' %></td>
            <td class="text-center"><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning btn-sm' %></td>
            <td class="text-center">
              <%= button_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm', form: { class: "d-inline" } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to 'New User', new_user_path, class: 'btn btn-success' %>
</div>
